<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.company.ldap.web.screens.Screen"
        messagesPack="com.company.ldap.web.screens">
    <dialogMode height="600"
                width="800"/>
    <layout>
        <tabSheet>
            <tab id="connectionTab"
                 caption="Connection"
                 margin="true,false,false,false"
                 spacing="true">
                <flowBox spacing="true">
                    <label id="url_label"
                           value="url"
                           width="70px"/>
                    <textField id="url"
                               width="370px"/>
                </flowBox>
                <flowBox spacing="true">
                    <label id="base_label"
                           value="base"
                           width="70px"/>
                    <textField id="base"
                               width="370px"/>
                </flowBox>
                <flowBox spacing="true">
                    <label id="user_label"
                           value="user"
                           width="70px"/>
                    <textField id="user"
                               width="370px"/>
                </flowBox>
                <flowBox spacing="true">
                    <label id="password_label"
                           value="password"
                           width="70px"/>
                    <textField id="password"
                               width="370px"/>
                </flowBox>
                <textArea id="connectionStatus"
                          width="798px"/>
                <buttonsPanel>
                    <button id="saveConnectionSettings"
                            caption="Save"
                            invoke="onSaveConnectionSettingsClick"/>
                    <button id="testConnection"
                            caption="Test"
                            invoke="onTestConnectionClick"/>
                </buttonsPanel>
            </tab>
            <tab id="SchemaTab"
                 caption="Schema"
                 margin="true,false,false,false"
                 spacing="true">
                <flowBox spacing="true">
                    <label value="login attribute name"
                           width="180px"/>
                    <textField id="loginAttribute"
                               width="260px"/>
                </flowBox>
                <flowBox spacing="true">
                    <label value="email attribute name"
                           width="180px"/>
                    <textField id="emailAttribute"
                               width="260px"/>
                </flowBox>
                <flowBox spacing="true">
                    <label value="cn attribute name"
                           width="180px"/>
                    <textField id="cnAttribute"
                               width="260px"/>
                </flowBox>
                <flowBox spacing="true">
                    <label value="sn attribute name"
                           width="180px"/>
                    <textField id="snAttribute"
                               width="260px"/>
                </flowBox>
                <flowBox spacing="true">
                    <label value="memberOf attribute name"
                           width="180px"/>
                    <textField id="memberOfAttribute"
                               width="260px"/>
                </flowBox>
                <flowBox spacing="true">
                    <label value="user base "
                           width="180px"/>
                    <textField id="userBase"
                               width="260px"/>
                </flowBox>
                <button id="saveSchemaSettings"
                        caption="Save"
                        invoke="onSaveSchemaSettingsClick"/>
            </tab>
            <tab id="PoolingTab"
                 caption="Pooling"
                 margin="true,false,false,false"
                 spacing="true"/>
        </tabSheet>
    </layout>
</window>
