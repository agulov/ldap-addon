<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.ldap.web.abstractmatchingrule.AbstractMatchingRuleBrowse"
        focusComponent="abstractMatchingRulesTable"
        lookupComponent="abstractMatchingRulesTable"
        messagesPack="com.company.ldap.web.abstractmatchingrule">
    <dsContext>
        <groupDatasource id="abstractMatchingRulesDs"
                         class="com.company.ldap.entity.AbstractMatchingRule"
                         datasourceClass="com.company.ldap.web.screens.datasources.MatchingRuleDatasource"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="abstractMatchingRulesTable"
            spacing="true">
        <filter id="filter"
                applyTo="abstractMatchingRulesTable"
                datasource="abstractMatchingRulesDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="abstractMatchingRulesTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="customEdit"
                        invoke="customEditAction"/>
                <action id="customCreate"
                        invoke="customCreateAction"/>
            </actions>
            <columns>
                <column id="isTerminalRule"/>
                <column id="isOverrideExistingRoles"/>
                <column id="isOverrideExistingAccessGroup"/>
                <column id="isDisabled"/>
            </columns>
            <rows datasource="abstractMatchingRulesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="abstractMatchingRulesTable.customCreate"/>
                <button id="editBtn"
                        action="abstractMatchingRulesTable.customEdit"/>
                <button id="removeBtn"
                        action="abstractMatchingRulesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <textField id="custTextField"/>
    </layout>
</window>
