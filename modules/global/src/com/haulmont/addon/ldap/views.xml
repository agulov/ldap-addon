<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<views xmlns="http://schemas.haulmont.com/cuba/view.xsd">
    <view class="com.haulmont.addon.ldap.entity.FixedMatchingRule"
          extends="_local"
          name="fixedMatchingRule-with-group-roles">
        <property name="accessGroup"
                  view="_minimal"/>
        <property name="roles"
                  view="_minimal"/>
    </view>
    <view class="com.haulmont.addon.ldap.entity.SimpleMatchingRule"
          extends="_local"
          name="simpleMatchingRule-view-with-group-roles-conditions">
        <property name="accessGroup"
                  view="_minimal"/>
        <property name="roles"
                  view="_minimal"/>
        <property name="conditions"
                  view="_local"/>
    </view>

    <view class="com.haulmont.cuba.security.entity.UserRole"
          extends="_local"
          name="user-role-view-with-role">
        <property name="role" view="_local" fetch="JOIN"/>
    </view>

    <view class="com.haulmont.cuba.security.entity.User"
          extends="_local"
          name="sec-user-view-with-group-roles">
        <property name="group" view="_local" fetch="JOIN"/>
        <property name="userRoles" view="user-role-view-with-role" fetch="JOIN"/>
    </view>
</views>
